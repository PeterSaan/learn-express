<nav aria-label="Page navigation example" class="mt-3">
    <ul class="pagination justify-content-center">
        {% if page == 1 %}
            <li class="page-item disabled">
                <a class="page-link"> < </a>
            </li>
        {% else %}
            <li class="page-item">
                <a class="page-link" href="?page={{page-1}}"> < </a>
            </li>
        {% endif %}

        {% for i in pagination.elements %}
            {% if i == '...' %}
                <li class="page-item disabled">
                    <a class="page-link">{{ i }}</a>
                </li>
            {% elif i == pagination.current %}
                <li class="page-item active">
                    <a class="page-link"> > </a>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link">{{ i }} </a>
                </li>
            {% endif %}
        {% endfor %}

        {% if page == pagination.total %}
            <li class="page-item disabled">
                    <a class="page-link"> > </a>
            </li>
        {% else %}
            <li class="page-item">
                <a class="page-link" href="?page={{totalPages}}"> > </a>
            </li>
        {% endif %}
    </ul>
</nav>